.sidebar
	width calc(100% - 7rem)
	opacity 0
	display flex
	align-self flex-start
	flex-direction column
	padding 0 2rem 0 1rem
	margin-left 0
	position absolute
	top 0
	right 0
	transform translateX(100%)
	height 100vh
	background-color $light-tan
	border-left 1px solid $off-black
	+mq('bp-6')
		position sticky
		top 5rem
		right 0
		width 20rem
		margin-left 2rem
		transform translateX(0)
		border-left 0

	&.is-visible
		transform translateX(0)

	.mentions
		margin 0 0 2rem 0

		span
			color $red-accent
			font-family $national
			font-weight 700
			set-type-size(large)

	.headline-wrapper

		.headline
			display flex
			border-bottom 1px solid

			.hed-num
				color $red-accent
				font-weight 700
				font-family $national
				vertical-align baseline
				margin-top 1.25rem

			.hed-text
				set-type-size(small)
				line-height 1.5
				vertical-align baseline
				padding-left 0.75rem
				color darken($dark-tan, 20)

				span
					font-weight 700
					font-family $national
					text-transform uppercase
					color $off-black
					text-decoration underline

	.chart-wrapper
		width 100%
		height 180px
		margin-top 2rem

		.domain, .tick line
			display none

		.tick text
			font-family $national

		.g-baseline line
			display inline-block

		.line
			fill none
			stroke black
			stroke-width 2
			display inline-block

		.area
			display inline-block

		.overlay
			fill none
			pointer-events all

		circle
			fill $red-accent
			stroke $light-tan
			stroke-width 2

		.tooltip-text
			font-family $national
			font-weight 700
			text-shadow -4px -4px 0 $light-tan, 4px -4px 0 $light-tan, -4px 4px 0 $light-tan, 4px 4px 0 $light-tan

.sidebar::before
	display inline-block
	width 2.5rem
	height 2.5rem
	color $light-tan
	content url('/assets/images/chevron-left.svg')
	text-align center
	font-family $national
	font-weight 700
	position relative
	top -2.5rem
	left -3.5rem
	border-radius 0.5rem 0 0 0.5rem
	background-color $off-black
	+mq('bp-6')
		display none
