.sidebar
	width 20rem
	opacity 0
	display flex
	align-self flex-start
	flex-direction column
	position sticky
	top 5rem
	right 0
	padding-right 2rem

	.mentions
		margin 0 0 2rem 0

		span
			color $red-accent
			font-family $national
			font-weight 700
			set-type-size(large)

	.headline-wrapper

		.headline
			display flex
			border-bottom 1px solid

			.hed-num
				color $red-accent
				font-weight 700
				font-family $national
				vertical-align baseline
				margin-top 1.25rem

			.hed-text
				set-type-size(small)
				line-height 1.5
				vertical-align baseline
				padding-left 0.75rem
				color darken($dark-tan, 20)

				span
					font-weight 700
					font-family $national
					text-transform uppercase
					color $off-black
					text-decoration underline

	.chart-wrapper
		width 100%
		margin-top 2rem

		.domain, .tick line
			display none

		.tick text
			font-family $national

		.g-baseline line
			display inline-block

		.line
			fill none
			stroke black
			stroke-width 2
			display inline-block

		.area
			display inline-block

		.overlay
			fill none
			pointer-events all

		circle
			fill $red-accent
			stroke $light-tan
			stroke-width 2

		.tooltip-text
			font-family $national
			font-weight 700
