.sidebar
	width 20rem
	position absolute
	top 0
	right 0
	padding-right 2rem

	.mentions
		margin 0 0 2rem 0

		span
			color $red-accent
			font-weight 700
			set-type-size(large)

	.headline-wrapper

		.headline
			display flex
			border-bottom 1px solid

			.hed-num
				color $red-accent
				font-weight 700

			.hed-text
				padding-left 1rem
				color darken($dark-tan, 10)

				span
					font-weight 700
					font-family $atlas
					text-transform uppercase
					color $off-black
					text-decoration underline

	.chart-wrapper
		width 100%
