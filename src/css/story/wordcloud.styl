.middle-chunk
	width calc(100% - 7rem)
	position static
	top 0
	right 0
	padding-right 2rem
	+mq('bp-6')
		margin 0 auto
		position relative
		max-width $column-width
		width 50%
		padding-right 0


	.wordcloud-wrapper
		border-left 1px solid
		width 100%
		margin 0 0 10rem 0
		padding 0 0 0 1rem

		.decade-title
			text-align center
			font-family 'National 2 Narrow Web', Helvetica, Arial, sans-serif
			font-weight 700
			set-type-size('x-large', true)

		.decade-text

			span
				font-weight 700
				font-family $national
				text-transform uppercase
				color $off-black
				text-decoration underline

		.word-cloud

			.clickedWord
				fill $off-black
				font-family $national
				font-weight 700
				text-transform uppercase
				&:hover
					fill $off-black

			text
				font-family $tiempos
				fill $dark-tan
				&:hover
					fill darken($dark-tan, 20)
