.year-nav
	width 3.75rem
	top 5rem
	left 0
	text-align center
	position sticky
	align-self flex-start
	margin 0 1rem 0 0.5rem
	display flex
	flex-direction column
	+mq('bp-3-5')
		width 4.5rem
		margin 0 2rem 0 0.5rem

	.decade-wrapper
		display flex
		flex-direction column
		//height 6rem

		.decade-height
			height 1.2rem
			+mq('bp-3-5')
				height 2.5rem

			.plain
				font-weight 500

			.decade
				cursor pointer
				margin 0
				font-weight 500
				set-type-size(small)
				+mq('bp-3-5')
					set-type-size(root)
					&:hover
						font-weight 700
						cursor pointer

			.current
				font-weight 700 !important
				font-size 20px
				margin-top -0.5rem !important
				+mq('bp-3-5')
					set-type-size(large) !important

		.dots
			transform rotate(90deg)
			margin 0.5rem
			&:after
				content '•'
				font-size 8px
				letter-spacing 2px
				position absolute
				bottom -0.5rem
				left 1.1rem
			+mq('bp-3-5')
					margin 1rem 0

		.dots::after
			+mq('bp-3-5')
				content '•••'
				set-type-size(xxx-small)
				letter-spacing 4px
				bottom -0.5rem
				left 0.8rem
