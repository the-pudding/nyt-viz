.year-nav
	width 5rem
	top 5rem
	left 0
	text-align center
	position sticky
	align-self flex-start
	margin 0
	display flex
	flex-direction column

	.decade-wrapper
		display flex
		flex-direction column
		height 4.5rem

		.decade
			margin 0

		.dots
			transform rotate(90deg)
			margin 1rem 0
			&:after
				content '•••'
				set-type-size(xxx-small)
				letter-spacing 4px
				position absolute
				bottom -0.5rem
				left 2.25rem
